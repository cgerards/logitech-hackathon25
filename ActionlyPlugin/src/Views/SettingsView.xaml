<UserControl x:Class="Loupedeck.ActionlyPlugin.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="400" Height="160">
    <Border CornerRadius="6" Padding="12">
        <StackPanel>
            <Grid>
                <Button Grid.Column="2" x:Name="CloseTopButton" Width="28" Height="22" HorizontalAlignment="Right" VerticalAlignment="Top"
Margin="0,0,0,0" Padding="0" Background="Transparent" BorderBrush="Transparent" Click="CloseButton_Click"
ToolTip="Close">
                    <Grid>
                        <Ellipse Fill="Transparent" />
                        <TextBlock Text="✕" Foreground="#FFD0D0D0" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#22FFFFFF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            
            <Grid Margin="5,8,5,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
               Text="Model" 
               Foreground="#FFD0D0D0" 
               FontSize="14" 
               VerticalAlignment="Center"
               Margin="0,0,8,0"/>


                <ComboBox x:Name="MyComboBox" 
  Height="30"
  Grid.Column="1">

                    <ComboBox.Template>
                        <ControlTemplate TargetType="ComboBox">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton"
                      Background="#2d2d30"
                      BorderBrush="#3f3f46"
                      BorderThickness="1"
                      Focusable="False"
                      IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                      ClickMode="Press">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border Background="#2d2d30" 
                            BorderBrush="#3f3f46" 
                            BorderThickness="1"
                            CornerRadius="4">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition Width="20"/>
                                                    </Grid.ColumnDefinitions>
                                                    <ContentPresenter Grid.Column="0" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                                    <Path Grid.Column="1" 
                                  Data="M 0 0 L 4 4 L 8 0 Z"
                                  Fill="#e0e0e0"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>

                                <ContentPresenter x:Name="ContentSite"
                          Content="{TemplateBinding SelectionBoxItem}"
                          Margin="8,0,0,0"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Left"
                          IsHitTestVisible="False">
                                    <ContentPresenter.Resources>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#e0e0e0"/>
                                        </Style>
                                    </ContentPresenter.Resources>
                                </ContentPresenter>

                                <Popup x:Name="Popup"
               Placement="Bottom"
               IsOpen="{TemplateBinding IsDropDownOpen}"
               AllowsTransparency="True"
               Focusable="False">
                                    <Border Background="#2d2d30"
                    BorderBrush="#3f3f46"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="0,2,0,0">
                                        <ScrollViewer Margin="2" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </ControlTemplate>
                    </ComboBox.Template>

                    <ComboBoxItem Content="Gemini 2.5 Flash" Tag="gemini-2.5-flash">
                        <ComboBoxItem.Style>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Foreground" Value="#e0e0e0"/>
                                <Setter Property="Background" Value="#2d2d30"/>
                                <Setter Property="Padding" Value="10,6"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#3e3e42"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#094771"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBoxItem.Style>
                    </ComboBoxItem>

                    <ComboBoxItem Content="Gemini 2.5 Pro" Tag="gemini-2.5-pro">
                        <ComboBoxItem.Style>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Foreground" Value="#e0e0e0"/>
                                <Setter Property="Background" Value="#2d2d30"/>
                                <Setter Property="Padding" Value="10,6"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#3e3e42"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#094771"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBoxItem.Style>
                    </ComboBoxItem>

                    <ComboBoxItem Content="Gemini 2.5 Flash Lite" Tag="gemini-2.5-flash-lite">
                        <ComboBoxItem.Style>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Foreground" Value="#e0e0e0"/>
                                <Setter Property="Background" Value="#2d2d30"/>
                                <Setter Property="Padding" Value="10,6"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#3e3e42"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#094771"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBoxItem.Style>
                    </ComboBoxItem>
                </ComboBox>
            </Grid>


            <Grid Margin="5,8,5,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
               Text="API Key:" 
               Foreground="#FFD0D0D0" 
               FontSize="14" 
               VerticalAlignment="Center"
               Margin="0,0,8,0"/>

                <TextBox Grid.Column="1"
             x:Name="ApiKeyTextBox"
             Background="#FF1E1E1E"
             Foreground="White"
             BorderBrush="#FF3E3E42"
             Padding="6"
             VerticalContentAlignment="Center"
             ToolTip="Enter your API key here"/>
            </Grid>
            <Button Content="Save" Margin="10" Width="140" HorizontalAlignment="Center" Click="SaveButton_Click"/>
        </StackPanel>
    </Border>
</UserControl>