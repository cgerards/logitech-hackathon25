<UserControl x:Class="Loupedeck.ActionlyPlugin.Views.ConfirmView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="260" Height="110">

    <Border CornerRadius="6" Padding="8">
        <StackPanel>
            <TextBlock Text="CONFIRM VIEW" Foreground="White" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
            <TextBlock Text="The operation completed successfully! We will provide the string here." Foreground="#FFD0D0D0" TextWrapping="Wrap" Margin="0,8,0,0"/>

            <Button Grid.Row="0" x:Name="ConfirmButton" Width="80" Height="22" HorizontalAlignment="Right" VerticalAlignment="Top"
        Margin="0,0,0,0" Padding="0" Background="Transparent" BorderBrush="Transparent" Click="Confirm_Click"
        ToolTip="Close">
                <Grid>
                    <Ellipse Fill="Transparent" />
                    <TextBlock Text="Confirm ✔" Foreground="#FFD0D0D0" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#22FFFFFF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </StackPanel>
    </Border>
</UserControl>