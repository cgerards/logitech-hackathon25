<UserControl x:Class="Loupedeck.ActionlyPlugin.Views.ConfirmView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="260" Height="200">

    <Border CornerRadius="6" Padding="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="CONFIRM VIEW" Foreground="White" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
            <TextBlock Grid.Row="1" Text="{Binding Response.Explanation}" Foreground="#FFD0D0D0" TextWrapping="Wrap" Margin="0,8,0,0"/>
            <ListBox Grid.Row="2" ItemsSource="{Binding Response.Combinations}" />

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                <Button Content="Do not execute" Width="120" Margin="0,0,8,0"/>
                <Button Content="Execute automatically" Width="120"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>